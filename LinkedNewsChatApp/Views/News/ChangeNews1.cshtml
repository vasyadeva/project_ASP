@model IDictionary<int, Tuple<string, string, string>>
@{
    ViewData["Title"] = "Edit News";
}
<h2>Edit News</h2>

@foreach (var news in Model)
{


                   <div class="card mb-3 h-100 w-100">
                       <div class="card-body">
                           <h5 class="card-title">News @news.Key</h5>
                           <form asp-action="ChangeNews" method="post" enctype="multipart/form-data">
                               <div class="form-group">
                                   <label for="title">Title:</label>
                                   <input type="text" class="form-control" id="title" name="Title" value="@news.Value.Item1" required>
                               </div>
                               <div class="form-group">
                                   <label for="content">Content:</label>
                                   <textarea class="form-control" id="content" name="Content" rows="3" required>@news.Value.Item2</textarea>
                               </div>
                               <div class="form-group">
                                   <label for="image">Image:</label>
                                   <input type="file" class="form-control-file" id="image" name="Image" accept=".jpg, .jpeg, .png">
                                   <small class="form-text text-muted">Supported image formats: .jpg, .jpeg, .png</small>
                               </div>
                               <input type="hidden" name="Id" value="@news.Key" />
                               <button type="submit" class="btn btn-primary">Save</button>
                           </form>
                           <form asp-action="DeleteNews" asp-route-id="@news.Key" method="post" style="margin-top: 10px">
                               <button type="submit" class="btn btn-danger">Delete</button>
                           </form>
                       </div>
                   </div>
    <br />
    <br />
    <br />

}
