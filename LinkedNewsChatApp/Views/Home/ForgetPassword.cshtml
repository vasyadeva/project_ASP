@model UserModel
@{
    ViewData["Title"] = "Змінити пароль";

    var message = TempData["SuccessfulUpdate"];
    TempData.Keep("SuccessfulUpdate");
}

<div class="text-center">
    <h1 class="display-4">Забули пароль?</h1>
    <h4>Будь ласка, введіть ваш юзернейм і електронну пошту для відновлення доступу до акаунту.</h4>
</div>
<br />
<div class="text-center">
    <h6 style="color: red"><b>@ViewBag.error</b></h6>
</div>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">Введіть ваш Юзернейм</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Введіть електронну пошту</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Отримати новий пароль" class="btn btn-success" />
            </div>
        </form>
        <br />
        <div class="footer-links">
            @if (User.Identity.IsAuthenticated)
        {
            <div>
                @Html.ActionLink("Перейти в чат", "Index", "Chat")
            </div>
        }
        else
        {
            <div>
                @Html.ActionLink("Повернутись до сторінки авторизації", "Index")
            </div>
        }
        </div>        
    </div>
</div>
