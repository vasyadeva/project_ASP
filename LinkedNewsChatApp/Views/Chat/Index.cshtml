    <div class="form-group">
        <input type="button" id="LeaveButton" value="Leave room" />
    </div>

    <div class="message-box">
        <ul id="messagesList"></ul>
    </div>

    <div class="chat-input">
        <textarea id="messageInput" placeholder="Your text here..."></textarea>
        <button id="sendButton" style="font-weight: bold"> Send <i class="fa fa-paper-plane fa-x "></i></button>
    </div>
</div>














<div id="mySidenavUsers" class="sidenavRight">
