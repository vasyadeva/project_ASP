@model List<GroupModel>
@using LinkedNewsChatApp.Models;
@section Scripts
{
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<style>
        .sidenav {
            height: 80%;
            width: 51%;
            position: absolute;
            z-index: 1;
            margin-left: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            
            transition: 0.5s;
            padding-top: 10px;
        }

            .sidenav a {
                padding: 8px 12px 8px 8px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                opacity: 100%;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                    opacity: 100%;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                opacity: 100%;
                font-size: 36px;
                margin-left: 50px;
            }


     /*------------------------------*/
        .sidenav2 {
            height: 80%;
            width: 40%;
            position: absolute;
            z-index: 1;
            right: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: width 0.5s, right 0.5s;
            padding-top: 20px;
        }

            .sidenav2 a {
                padding: 8px 12px 8px 8px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                opacity: 100%;
                transition: 0.3s;
            }

                .sidenav2 a:hover {
                    color: #f1f1f1;
                    opacity: 100%;
                }

            .sidenav2 .closebtn {
                position: absolute;
                top: 0;
                left: 25px;
                font-size: 36px;
                margin-right: 50px;
                opacity: 100%;
            }
</style>
}
<div id="mySidenav" class="sidenav" style="opacity: 80%;">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div class="groups-main2">
        <div id="mySidenavGroups" class="sidenavLeft2" >
        <p style="text-align:center;font-weight: bold;color:white;">Group Chat Rooms</p>
        <button id="backToMain" class="btn btn-warning btn-lg" onclick="location.href='@Url.Action("Index", "Chat")'">Main Chat</button>
        <div>
            <div class="text-center">
                <h6 id="groupError"></h6>
            </div>
            <div class="form-group">
                <label style="color:white;">Enter new room name</label>
                <input id="GroupChatName" name="groupName" class="form-control" placeholder="  ..." />
            </div>
            <div class="form-group">
                <input type="button" id="joinGroupButton" style="font-weight: 500;background-color:aliceblue" value="Add new" />
            </div>
                <div class="form-group">
                    <label style="color:white;">Enter room to join</label>
                    <input id="GroupJoin" name="groupName" class="form-control" placeholder="  ..." />
                </div>
                <div class="form-group">
                    <input type="button" id="joinButton" style="font-weight: 500;background-color:aliceblue" value="Join" />
                </div>
        </div>
        <p style="text-align:center;font-weight: bold;color:white">Chat Rooms Online</p>
        <div id="groupOnlineList" class="row text-center">
            <ul id="groupList2"></ul>
        </div>
    </div>
</div>
</div>




<div id="mySidenav2" class="sidenav2" style="opacity: 80%;">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav2()">&times;</a>
    <div id="mySidenavUsers2" class="sidenavRight2">
        <p style="text-align:center;font-weight: bold;color:white;">Users Online</p>
        <div class="text-center">
            <h6 id="userError2"></h6>
        </div>
        <div class="form-group">
            <label style="color:white;">Enter friend to add</label>
            <input id="FriendJoin2" name="groupName" class="form-control" placeholder="  ..." />
        </div>
        <div class="form-group">
            <input type="button" id="FriendButton2" style="font-weight: 500;background-color:aliceblue" value="Add Friend" />
        </div>
        <div class="row text-center">
            <ul id="FriendOnlineList2"></ul>
            <ul id="userOnlineList2"></ul>
        </div>
    </div>
</div>




<span class="spbutton" style="font-size:30px;cursor:pointer;position:absolute; margin-top:0px; left:20px" onclick="openNav()">&#9776; групи</span>
<span class="spbutton2" style="font-size:30px;cursor:pointer;position:absolute; margin-top:0px; right:20px;" onclick="openNav2()">&#9776; юзери</span>




<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

<script>
    function openNav2() {
        document.getElementById("mySidenav2").style.width = "250px";
    }

    function closeNav2() {
        document.getElementById("mySidenav2").style.width = "0";
    }
</script>





<div class="chat-main">
    <h1 class="chatHead" style="text-align:center" ;><pre> </pre> </h1>
