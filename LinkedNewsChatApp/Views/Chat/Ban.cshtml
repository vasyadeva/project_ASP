<div>

    @using (Html.BeginForm("Ban", "Chat", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container">
            <form>
    <div class="form-group">
        <label for="username">Юзернейм</label>
        <input type="text" name="Username" class="form-control" id="username" placeholder="Введіть юзернейм" required>
    </div>
    <div class="form-group">
        <label for="password">Пароль адміністратора</label>
        <input type="password" name="Password" class="form-control" id="password" placeholder="Введіть пароль" required>
    </div>
    <div class="form-group">
        <label for="dropdownMenu">Статус користувача</label>
        <select id="dropdownMenu" name="dropdownMenu" class="form-control" required>
            <option value="option1">Бан</option>
            <option value="option2">Розбан</option>
        </select>
    </div>
    <div class="form-group">
        <label for="numericField">Термін бану</label>
        <input type="number" name="numericField" class="form-control" id="numericField" min="1" max="365" placeholder="Введіть термін бану" required>
    </div>
    <button type="submit" class="btn btn-primary">Опублікувати</button>
</form>

        </div>
    }


</div>
